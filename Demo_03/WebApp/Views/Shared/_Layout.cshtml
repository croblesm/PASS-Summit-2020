<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Geo Kids</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md">
            <div class="container">
                <div class="navbar-header">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon">
                            <div class="collapse navbar-collapse" id="navbarCollapse"></div>
                        </span>
                    </button>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.jpg" height="75"></a>
                </div>
                <div class="navbar-collapse collapse"> 
                    <ul class="nav navbar-nav">
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Continents" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Continents" asp-action="Index">Continents</a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Regions" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Regions" asp-action="Index">Regions</a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Countries" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Countries" asp-action="Index">Countries</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <section class="hero-text"><div class="container"><div class="row"> <div class="col-lg-2"><img src="~/img/logo.jpg" height="150"></div><div class="col-lg-9"><br><br><h1 class="aligncenter">Geo Kids - Learning by playing</h1><span class="clear spacer_responsive_hide_mobile"></span></div></div></div></section>
    
    
    <main role="main" class="container">
        <div class="row">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer">
        <div class="container copyright">
            © GeoKids - Powered by DBA Mastery and Yova de León - V1.0
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
